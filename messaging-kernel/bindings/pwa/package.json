{
  "name": "@neo/pwa",
  "version": "0.1.0",
  "description": "High-performance PWA bindings for Neo Messaging Kernel",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c --watch",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "pwa",
    "progressive-web-app",
    "service-worker",
    "web-push",
    "rpc",
    "messaging",
    "high-performance",
    "protocol",
    "neo",
    "microservices"
  ],
  "author": "Neo Qiss <neo@example.com>",
  "license": "MIT OR Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/neo-qiss/messaging-kernel.git",
    "directory": "bindings/pwa"
  },
  "bugs": {
    "url": "https://github.com/neo-qiss/messaging-kernel/issues"
  },
  "homepage": "https://github.com/neo-qiss/messaging-kernel#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "workbox-window": "^7.0.0",
    "workbox-sw": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0",
    "workbox-precaching": "^7.0.0",
    "workbox-background-sync": "^7.0.0",
    "workbox-broadcast-update": "^7.0.0",
    "workbox-cacheable-response": "^7.0.0",
    "workbox-expiration": "^7.0.0",
    "workbox-google-analytics": "^7.0.0",
    "workbox-navigation-preload": "^7.0.0",
    "workbox-range-requests": "^7.0.0",
    "workbox-streams": "^7.0.0",
    "idb": "^7.1.1",
    "comlink": "^4.4.1",
    "broadcast-channel": "^4.19.0",
    "localforage": "^1.10.0",
    "crypto-js": "^4.2.0",
    "uuid": "^9.0.1",
    "rxjs": "^7.8.1",
    "axios": "^1.6.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/jest": "^29.5.8",
    "@types/crypto-js": "^4.2.1",
    "@types/uuid": "^9.0.6",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "ts-jest": "^29.1.1",
    "rollup": "^4.6.1",
    "@rollup/plugin-typescript": "^11.1.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-replace": "^5.0.5",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-serve": "^2.0.1",
    "rollup-plugin-livereload": "^2.0.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.(ts|tsx|js|jsx)",
      "**/*.(test|spec).(ts|tsx|js|jsx)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**",
      "!src/**/__mocks__/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/__tests__/setup.ts"
    ]
  },
  "files": [
    "dist/**/*",
    "service-worker.js",
    "manifest.json",
    "!**/__tests__/**",
    "!**/__mocks__/**",
    "!**/node_modules/**"
  ]
}